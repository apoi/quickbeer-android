<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="MaterialDrawerTheme.ActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:textColor">@color/text_primary_inverted</item>
        <item name="android:textColorHint">@color/text_secondary_inverted</item>

        <!-- App general background -->
        <item name="android:windowBackground">@drawable/background_dark</item>

        <!-- Navigation drawer selected items -->
        <item name="material_drawer_selected">@color/color_primary</item>
        <item name="material_drawer_selected_text">@color/color_accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
