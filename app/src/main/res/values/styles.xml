<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="MaterialDrawerTheme.ActionBar">
        <item name="colorPrimary">@color/gray_900</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/orange</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_platform_secondary</item>

        <!-- App general background -->
        <item name="android:windowBackground">@drawable/background_dark</item>

        <!-- Navigation drawer selected items -->
        <item name="material_drawer_selected">@color/gray_900</item>
        <item name="material_drawer_selected_text">@color/orange</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
