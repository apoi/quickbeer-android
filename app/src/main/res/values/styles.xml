<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/gray_900</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/orange</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_platform_secondary</item>

        <!-- App general background -->
        <item name="android:windowBackground">@drawable/background_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolbarCollapsedText" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="ToolbarExpandedText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">28sp</item>
    </style>
    
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MaterialSearchViewStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BeerDetailsDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BeerDetailsTitle" parent="BeerDetailsDescription">
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10.5sp</item>
        <item name="android:alpha">0.4</item>
    </style>

    <style name="BeerDetailsValue" parent="BeerDetailsDescription">
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="BeerDetailsSubvalue" parent="BeerDetailsDescription">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BeerDetailsInfoValue" parent="BeerDetailsDescription">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BeerDetailsRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BeerDetailsColumnLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
