<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary elements, such as background -->
        <item name="colorPrimary">@color/gray_90</item>
        <item name="colorPrimaryDark">@color/black</item>

        <!-- Secondary elements, such as unfocused/disabled -->
        <item name="colorSecondary">@color/gray_70</item>

        <!-- Color of (text) on primary/secondary elements -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Elements on top of primary/secondary -->
        <item name="colorOnSurface">@color/gray_50</item>

        <!-- Action/active elements -->
        <item name="colorAccent">@color/orange_dark</item>

        <item name="android:textColor">@color/text_light</item>
        <item name="android:textColorHint">?attr/colorOnSurface</item>

        <!-- Color for toolbar icons -->
        <item name="colorControlNormal">@color/icon_light</item>

        <!-- Tab layout -->
        <item name="tabStyle">@style/TabLayoutLight</item>

        <!-- App general background -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:windowBackground">@drawable/background_dark</item>
        <item name="toolbarNavigationButtonStyle">@style/TintedNavigation</item>

        <!-- Dialogs -->
        <item name="materialAlertDialogTheme">@style/AppTheme.Dialog</item>
    </style>

    <style name="AppTheme.BarcodeScanner">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- Toolbar -->
    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.Toolbar.Transparent">
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Static AppBar to set statusbar background -->
    <style name="AppTheme.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="statusBarForeground">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBar.Transparent">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="AppTheme.AppBar.Gradient">
        <item name="android:background">@drawable/top_action_bar_scrim</item>
    </style>

    <style name="TintedNavigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <!-- Color for toolbar navigation icons -->
        <item name="tint">@color/icon_light</item>
    </style>

    <style name="ToolbarCollapsedText" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="ToolbarExpandedText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <!-- Tab layout -->
    <style name="TabLayoutLight" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabTextColor">@color/text_light</item>
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
    </style>

    <!-- Dialog -->
    <style name="AppTheme.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/text_hint</item>
        <item name="colorOnSurface">@color/text_hint</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AppTheme.Dialog.Body</item>
    </style>

    <style name="AppTheme.Dialog.Body" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <!-- Bottom sheet -->
    <style name="AppTheme.BottomSheet" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
        <item name="android:navigationBarColor">@color/gray_80</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Button -->
    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:elevation">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="AppTheme.Button.Primary">
        <item name="backgroundTint">@color/button_primary_color</item>
    </style>

    <!-- Text input -->
    <style name="AppTheme.TextInput.Cursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/gray_30</item>
    </style>

    <style name="AppTheme.TextInput.Layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_outline_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/gray_30</item>
        <item name="materialThemeOverlay">@style/AppTheme.TextInput.Cursor</item>
    </style>

    <!-- Progress indicator -->
    <style name="AppTheme.Progress.Normal" parent="Widget.MaterialComponents.CircularProgressIndicator.Medium">
        <item name="indicatorColor">?attr/colorAccent</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="AppTheme.Progress.Small" parent="Widget.MaterialComponents.CircularProgressIndicator.ExtraSmall">
        <item name="indicatorColor">?attr/colorAccent</item>
        <item name="trackThickness">1.5dp</item>
        <item name="indicatorSize">15dp</item>
        <item name="android:indeterminate">true</item>
    </style>

    <!-- Info cards -->
    <style name="InfoCard" parent="CardView">
        <item name="android:layout_marginLeft">@dimen/card_view_margin</item>
        <item name="android:layout_marginTop">@dimen/card_view_margin</item>
        <item name="android:layout_marginRight">@dimen/card_view_margin</item>
        <item name="android:elevation">@dimen/card_view_elevation</item>
        <item name="cardCornerRadius">@dimen/radius_l</item>
    </style>

    <!-- Beer details -->
    <style name="DetailsScore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_30</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="DetailsDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_30</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DetailsTitle" parent="DetailsDescription">
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10.5sp</item>
        <item name="android:alpha">0.4</item>
    </style>

    <style name="DetailsValue" parent="DetailsDescription">
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="DetailsSubvalue" parent="DetailsDescription">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DetailsInfoValue" parent="DetailsDescription">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="DetailsLink" parent="DetailsDescription">
        <item name="android:textColor">@color/gray_50</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DetailsLicense" parent="DetailsDescription">
        <item name="android:textColor">@color/gray_50</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="DetailsRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">false</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DetailsColumnLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>
