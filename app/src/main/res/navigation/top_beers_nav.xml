<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_beers"
    app:startDestination="@id/top_beers_fragment">

    <include app:graph="@navigation/details_nav" />
    <include app:graph="@navigation/search_nav" />

    <fragment
        android:id="@+id/top_beers_fragment"
        android:name="quickbeer.android.feature.topbeers.TopBeersFragment"
        android:label="@string/app_name"
        tools:layout="@layout/beer_list_fragment">

        <action
            android:id="@+id/to_details"
            app:destination="@id/details_nav">

            <!-- Workaround for bug https://issuetracker.google.com/issues/109505019 -->
            <argument
                android:name="id"
                app:argType="integer" />

        </action>

        <action
            android:id="@+id/to_search"
            app:destination="@id/search_nav">

            <argument
                android:name="query"
                app:argType="string" />

        </action>

    </fragment>

</navigation>
