<?xml version="1.0" encoding="utf-8"?>
<quickbeer.android.features.brewerdetails.BrewerDetailsView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/brewer_details_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_margin"
    android:clipToPadding="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_view_margin"
        app:cardBackgroundColor="@color/gray_800"
        android:elevation="@dimen/card_view_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:clipChildren="false"
                style="@style/BeerDetailsRowLayout">

                <LinearLayout
                    android:id="@+id/brewer_founded_column"
                    style="@style/BeerDetailsColumnLayout">

                    <TextView
                        style="@style/BeerDetailsTitle"
                        android:text="Founded"/>

                    <TextView
                        style="@style/BeerDetailsValue"
                        android:id="@+id/brewer_founded"
                        tools:text="1882"/>

                </LinearLayout>

                <include layout="@layout/beer_details_separator_vertical" />

                <LinearLayout
                    android:id="@+id/beer_rating_style_column"
                    style="@style/BeerDetailsColumnLayout">

                    <TextView
                        style="@style/BeerDetailsTitle"
                        android:text="Other fact"/>

                    <TextView
                        style="@style/BeerDetailsValue"
                        android:id="@+id/beer_rating_style"
                        tools:text="98"/>

                </LinearLayout>

                <include layout="@layout/beer_details_separator_vertical" />

                <LinearLayout
                    android:id="@+id/beer_abv_column"
                    style="@style/BeerDetailsColumnLayout">

                    <TextView
                        style="@style/BeerDetailsTitle"
                        android:text="@string/abv"/>

                    <TextView
                        style="@style/BeerDetailsValue"
                        android:id="@+id/beer_abv"
                        tools:text="4.7"/>

                </LinearLayout>

                <include layout="@layout/beer_details_separator_vertical" />

                <LinearLayout
                    android:id="@+id/beer_ibu_column"
                    style="@style/BeerDetailsColumnLayout">

                    <TextView
                        style="@style/BeerDetailsTitle"
                        android:text="@string/ibu"/>

                    <TextView
                        style="@style/BeerDetailsValue"
                        android:id="@+id/beer_ibu"
                        tools:text="38"/>

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/beer_details_separator_horizontal" />

            <LinearLayout
                style="@style/BeerDetailsRowLayout"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/brewer_description"
                    tools:text="This is brewer description."
                    style="@style/BeerDetailsDescription" />

            </LinearLayout>

            <include layout="@layout/beer_details_separator_horizontal" />

            <LinearLayout
                android:id="@+id/brewer_location_row"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                style="@style/BeerDetailsRowLayout">

                <TextView
                    style="@style/BeerDetailsTitle"
                    android:text="@string/origin"/>

                <TextView
                    style="@style/BeerDetailsValue"
                    android:id="@+id/brewer_location"
                    tools:text="Kerava, Finland"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</quickbeer.android.features.brewerdetails.BrewerDetailsView>
