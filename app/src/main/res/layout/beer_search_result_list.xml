<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/search_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-thin"
        android:textSize="@dimen/search_status_text"/>

    <quickbeer.android.next.views.MaskingLayout
        android:id="@+id/beer_list_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/beers_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

    </quickbeer.android.next.views.MaskingLayout>

    <quickbeer.android.next.views.OverlayHeader
        android:id="@+id/overlay_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/header_item_top_margin"
        android:gravity="center|bottom">

        <View
            android:id="@+id/header_top_fade"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_item_fade_height"
            android:background="@drawable/background_fade_up" />

        <FrameLayout
            android:id="@+id/header_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_item_height"
            android:layout_marginTop="@dimen/header_item_fade_height"
            android:gravity="start|center">

            <TextView
                android:id="@+id/header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-thin"
                android:textSize="@dimen/listitem_text_header"
                android:padding="@dimen/header_item_text_padding"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Header overlay"/>

        </FrameLayout>

        <View
            android:id="@+id/header_bottom_fade"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_item_fade_height"
            android:layout_marginTop="@dimen/header_item_bottom_fade_margin"
            android:background="@drawable/background_fade_down"
            android:visibility="invisible"/>

    </quickbeer.android.next.views.OverlayHeader>

</FrameLayout>
