<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/gray_800"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="start"
            style="@style/BeerDetailsRowLayout">

            <TextView
                android:id="@+id/review_description"
                tools:text="This is long review with ups and downs. It goes on for many lines, and feels like a drab eternity. Hopefully someone reads this."
                android:textAlignment="viewStart"
                style="@style/BeerDetailsDescription"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            style="@style/BeerDetailsRowLayout">

            <LinearLayout
                android:id="@+id/review_appearance_column"
                style="@style/BeerDetailsColumnLayout">

                <TextView
                    style="@style/BeerDetailsTitle"
                    android:text="Appear."/>

                <TextView
                    style="@style/BeerDetailsValue"
                    android:id="@+id/review_appearance"
                    tools:text="5"/>

            </LinearLayout>

            <include layout="@layout/beer_details_separator_vertical" />

            <LinearLayout
                android:id="@+id/review_aroma_column"
                style="@style/BeerDetailsColumnLayout">

                <TextView
                    style="@style/BeerDetailsTitle"
                    android:text="Aroma"/>

                <TextView
                    style="@style/BeerDetailsValue"
                    android:id="@+id/review_aroma"
                    tools:text="3"/>

            </LinearLayout>

            <include layout="@layout/beer_details_separator_vertical" />

            <LinearLayout
                android:id="@+id/review_flavor_column"
                style="@style/BeerDetailsColumnLayout">

                <TextView
                    style="@style/BeerDetailsTitle"
                    android:text="Flavor"/>

                <TextView
                    style="@style/BeerDetailsValue"
                    android:id="@+id/review_flavor"
                    tools:text="10"/>

            </LinearLayout>

            <include layout="@layout/beer_details_separator_vertical" />

            <LinearLayout
                android:id="@+id/review_mouthfeel_column"
                style="@style/BeerDetailsColumnLayout">

                <TextView
                    style="@style/BeerDetailsTitle"
                    android:text="Mouthf."/>

                <TextView
                    style="@style/BeerDetailsValue"
                    android:id="@+id/review_mouthfeel"
                    tools:text="8"/>

            </LinearLayout>

            <include layout="@layout/beer_details_separator_vertical" />

            <LinearLayout
                android:id="@+id/review_overall_column"
                style="@style/BeerDetailsColumnLayout">

                <TextView
                    style="@style/BeerDetailsTitle"
                    android:text="Overall"/>

                <TextView
                    style="@style/BeerDetailsValue"
                    android:id="@+id/review_overall"
                    tools:text="15"/>

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/beer_details_separator_horizontal" />

        <LinearLayout
            android:gravity="end"
            style="@style/BeerDetailsRowLayout">

            <TextView
                android:id="@+id/review_user"
                tools:text="beerdude @ 2017-02-11"
                style="@style/BeerDetailsInfoValue" />

            <TextView
                android:id="@+id/review_location"
                tools:text="Berlin, Brandenburg, Germany"
                style="@style/BeerDetailsInfoValue" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
