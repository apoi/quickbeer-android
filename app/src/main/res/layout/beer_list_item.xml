<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listitem_ripple"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingStart="@dimen/spacing_m"
    android:paddingTop="@dimen/spacing_s"
    android:paddingEnd="@dimen/spacing_m"
    android:paddingBottom="@dimen/spacing_s">

    <ImageView
        android:id="@+id/beer_stars"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_s"
        android:layout_marginEnd="@dimen/spacing_m"
        android:layout_marginBottom="@dimen/spacing_s"
        android:adjustViewBounds="true"
        android:src="@drawable/score_unrated"
        app:layout_constraintBottom_toBottomOf="@id/brewer_name"
        app:layout_constraintEnd_toStartOf="@id/beer_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/beer_name" />

    <TextView
        android:id="@+id/beer_score"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:textColor="@color/text_light"
        android:textSize="@dimen/listitem_text_score"
        app:layout_constraintBottom_toBottomOf="@id/beer_stars"
        app:layout_constraintEnd_toEndOf="@id/beer_stars"
        app:layout_constraintStart_toStartOf="@id/beer_stars"
        app:layout_constraintTop_toTopOf="@id/beer_stars" />

    <TextView
        android:id="@+id/beer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif-thin"
        android:singleLine="true"
        android:textColor="@color/text_light"
        android:textSize="@dimen/listitem_text_primary"
        app:layout_constraintBottom_toTopOf="@id/beer_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/beer_stars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Westvleteren 12 XII" />

    <TextView
        android:id="@+id/beer_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif-thin"
        android:singleLine="true"
        android:textColor="@color/gray_30"
        android:textSize="@dimen/listitem_text_secondary"
        app:layout_constraintBottom_toTopOf="@id/brewer_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/beer_name"
        app:layout_constraintTop_toBottomOf="@id/beer_name"
        tools:text="Quadrupel / Abt" />

    <TextView
        android:id="@+id/brewer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif-thin"
        android:singleLine="true"
        android:textColor="@color/gray_30"
        android:textSize="@dimen/listitem_text_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/beer_name"
        app:layout_constraintTop_toBottomOf="@id/beer_style"
        tools:text="Abjid St. Sixtus - Westvleteren" />

</androidx.constraintlayout.widget.ConstraintLayout>
