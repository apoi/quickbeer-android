<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/style_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:id="@+id/style_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:background="@drawable/listitem_ripple">

        <RelativeLayout
            android:id="@+id/style_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/style_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/expand_arrow"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-thin"
                android:textSize="@dimen/beer_details_header_text"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Abbey Dubbel"/>

            <ImageView
                android:id="@id/expand_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/style_name"
                android:layout_alignBottom="@id/style_name"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_arrow_drop_down"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/style_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/style_header_container"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="@dimen/beer_details_info_text"
            android:visibility="gone"/>

    </RelativeLayout>

    <quickbeer.android.views.BeerListView
        android:id="@+id/list_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_850">

        <include layout="@layout/recycler_list" />

    </quickbeer.android.views.BeerListView>

</LinearLayout>