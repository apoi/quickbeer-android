<?xml version="1.0" encoding="utf-8"?>
<quickbeer.android.features.styledetails.StyleDetailsView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/style_details_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_margin"
    android:clipToPadding="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_view_margin"
        app:cardBackgroundColor="@color/gray_800"
        android:elevation="@dimen/card_view_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false">

            <LinearLayout
                style="@style/BeerDetailsRowLayout"
                android:id="@+id/style_parent_row"
                android:clickable="true">

                <TextView
                    style="@style/BeerDetailsTitle"
                    android:text="Parent Category"/>

                <TextView
                    style="@style/BeerDetailsValue"
                    android:id="@+id/style_parent"
                    tools:text="Ales and Stouts"/>

            </LinearLayout>

            <include layout="@layout/beer_details_separator_horizontal" />

            <LinearLayout
                style="@style/BeerDetailsRowLayout"
                android:id="@+id/style_description_row"
                android:clickable="true">

                <TextView
                    style="@style/BeerDetailsTitle"
                    android:text="Description"/>

                <TextView
                    style="@style/BeerDetailsDescription"
                    android:id="@+id/style_description"
                    tools:text="This is a long style description"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</quickbeer.android.features.styledetails.StyleDetailsView>
