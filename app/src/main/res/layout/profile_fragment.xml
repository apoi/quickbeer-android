<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/profile_title" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <quickbeer.android.ui.view.GroupItem
                android:id="@+id/profile_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:position="FIRST">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_l">

                    <ImageView
                        android:id="@+id/profile_icon"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_profile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/profile_username"
                        style="@style/AppTheme.Text.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_l"
                        app:layout_constraintBottom_toTopOf="@id/profile_location"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toEndOf="@id/profile_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Max Mustermann" />

                    <TextView
                        android:id="@+id/profile_location"
                        style="@style/AppTheme.Text.M"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_l"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toEndOf="@id/profile_icon"
                        app:layout_constraintTop_toBottomOf="@id/profile_username"
                        tools:text="Berlin, Germany" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </quickbeer.android.ui.view.GroupItem>

            <quickbeer.android.ui.view.GroupLink
                android:id="@+id/profile_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:applyTopMargin="false"
                app:icon="@drawable/ic_noun_review"
                app:label="@string/profile_reviews"
                app:position="MIDDLE"
                tools:visibility="visible" />

            <quickbeer.android.ui.view.GroupLink
                android:id="@+id/profile_ticks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:applyTopMargin="false"
                app:icon="@drawable/ic_noun_rating"
                app:label="@string/profile_ticks"
                app:position="MIDDLE"
                tools:visibility="visible" />

            <quickbeer.android.ui.view.GroupLink
                android:id="@+id/profile_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:applyTopMargin="false"
                app:icon="@drawable/ic_profile"
                app:label="@string/profile_login"
                app:position="LAST" />

            <quickbeer.android.ui.view.GroupLink
                android:id="@+id/profile_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:applyTopMargin="false"
                app:icon="@drawable/ic_profile"
                app:label="@string/profile_logout"
                app:position="LAST"
                tools:visibility="visible" />

            <quickbeer.android.ui.view.GroupLink
                android:id="@+id/link_play_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:applyTopMargin="false"
                app:icon="@drawable/ic_noun_play_store"
                app:label="@string/about_google_play"
                app:position="ONLY" />

            <quickbeer.android.ui.view.GroupLink
                android:id="@+id/link_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:applyTopMargin="false"
                app:icon="@drawable/ic_noun_privacy"
                app:label="@string/about_privacy_policy"
                app:position="FIRST" />

            <quickbeer.android.ui.view.GroupLink
                android:id="@+id/link_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:applyTopMargin="false"
                app:icon="@drawable/ic_noun_source_code"
                app:label="@string/about_source_code"
                app:position="MIDDLE" />

            <quickbeer.android.ui.view.GroupLink
                android:id="@+id/link_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_noun_section"
                app:label="@string/about_quickbeer_license"
                app:position="MIDDLE" />

            <quickbeer.android.ui.view.GroupLink
                android:id="@+id/link_open_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_copyleft"
                app:label="@string/about_open_source_licenses"
                app:position="MIDDLE" />

            <quickbeer.android.ui.view.GroupLink
                android:id="@+id/link_graphics_assets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_noun_icon"
                app:label="@string/about_graphic_asset_licenses"
                app:position="LAST" />

            <TextView
                android:id="@+id/about_version"
                style="@style/DetailsDescription"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/spacing_l"
                android:text="@string/about_version"
                android:textAlignment="center" />

            <TextView
                style="@style/DetailsDescription"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/spacing_l"
                android:text="@string/about_description"
                android:textAlignment="center" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
