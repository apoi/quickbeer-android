<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/list_item_padding"
    android:paddingRight="@dimen/list_item_padding"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/beer_stars"
            android:layout_width="@dimen/list_item_icon_size"
            android:layout_height="@dimen/list_item_icon_size"
            android:layout_marginTop="@dimen/list_item_icon_margin"
            android:layout_marginBottom="@dimen/list_item_icon_margin"
            android:layout_marginRight="@dimen/list_item_icon_margin_right"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-thin"
            android:textSize="@dimen/listitem_text_score"
            android:background="@drawable/score_unrated" />

        <TextView
            android:id="@+id/beer_name"
            android:layout_toRightOf="@id/beer_stars"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-thin"
            android:textSize="@dimen/beer_details_header_text"
            android:singleLine="true"
            android:ellipsize="end" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/beer_details_left_margin_with_line"
        android:orientation="horizontal">

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_700"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingLeft="@dimen/beer_details_line_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/beer_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_300"
                android:fontFamily="sans-serif-thin"
                android:textSize="@dimen/beer_details_info_text"
                android:textStyle="italic"
                android:singleLine="true"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/beer_abv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_300"
                android:fontFamily="sans-serif-thin"
                android:layout_marginTop="-2dp"
                android:textSize="@dimen/beer_details_info_text"
                android:textStyle="italic"
                android:singleLine="true"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/brewer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_300"
                android:fontFamily="sans-serif-thin"
                android:layout_marginTop="-2dp"
                android:textSize="@dimen/beer_details_info_text"
                android:textStyle="italic"
                android:singleLine="true"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/brewer_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_300"
                android:fontFamily="sans-serif-thin"
                android:layout_marginTop="-2dp"
                android:textSize="@dimen/beer_details_info_text"
                android:textStyle="italic"
                android:singleLine="true"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/beer_details_image"
        android:layout_width="@dimen/beer_details_image_size"
        android:layout_height="@dimen/beer_details_image_size"
        android:layout_marginLeft="@dimen/beer_details_left_margin_with_line"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/beer_details_left_margin_with_line"
        android:orientation="horizontal">

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_700"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingLeft="@dimen/beer_details_line_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/beer_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_300"
                android:fontFamily="sans-serif-thin"
                android:textSize="@dimen/beer_details_info_text"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/review_header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/beer_details_left_margin_with_line"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-thin"
        android:textSize="@dimen/beer_details_sub_header_text"
        android:text="@string/beer_details_reviews" />

</LinearLayout>
