<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/list_item_padding"
    android:paddingRight="@dimen/list_item_padding"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/beer_stars"
            android:layout_width="@dimen/list_item_icon_size"
            android:layout_height="@dimen/list_item_icon_size"
            android:layout_marginTop="@dimen/list_item_icon_margin"
            android:layout_marginBottom="@dimen/list_item_icon_margin"
            android:layout_marginRight="@dimen/list_item_icon_margin_right"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-thin"
            android:textSize="@dimen/listitem_text_score"
            android:background="@drawable/score_unrated" />

        <TextView
            android:id="@+id/beer_name"
            android:layout_toRightOf="@id/beer_stars"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-thin"
            android:textSize="@dimen/beer_details_header_text"
            android:singleLine="true"
            android:ellipsize="end" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/beer_details_image"
            android:layout_width="@dimen/list_item_icon_size"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/list_item_icon_margin_right"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:alpha="0.8"/>

        <LinearLayout
            android:id="@+id/beer_details_data_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray_700"/>

            <LinearLayout
                android:id="@+id/details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingLeft="7dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/beer_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_300"
                    android:fontFamily="sans-serif-thin"
                    android:textSize="@dimen/listitem_text_secondary"
                    android:textStyle="italic"
                    android:singleLine="true"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/beer_abv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_300"
                    android:fontFamily="sans-serif-thin"
                    android:layout_marginTop="-2dp"
                    android:textSize="@dimen/listitem_text_secondary"
                    android:textStyle="italic"
                    android:singleLine="true"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/brewer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_300"
                    android:fontFamily="sans-serif-thin"
                    android:layout_marginTop="-2dp"
                    android:textSize="@dimen/listitem_text_secondary"
                    android:textStyle="italic"
                    android:singleLine="true"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/brewer_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_300"
                    android:fontFamily="sans-serif-thin"
                    android:layout_marginTop="-2dp"
                    android:textSize="@dimen/listitem_text_secondary"
                    android:textStyle="italic"
                    android:singleLine="true"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/beer_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:textColor="@color/gray_300"
                    android:fontFamily="sans-serif-thin"
                    android:textSize="@dimen/listitem_text_secondary"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
